
class Solution:
    def myAtoi(self, s: str) -> int:
        s = s.lstrip()  # remove leading spaces
        if not s:
            return 0

        result = []
        sign = 1
        start = 0

        # Handle sign
        if s[0] == '+':
            start = 1
        elif s[0] == '-':
            sign = -1
            start = 1

        # Extract digits
        for char in s[start:]:
            if char.isdigit():
                result.append(char)
            else:
                break

        # No digits found
        if not result:
            return 0

        # Join digits into number
        num_str = "".join(result)
        num = int(num_str) * sign

        # Clamp to 32-bit signed integer range
        INT_MIN, INT_MAX = -2**31, 2**31 - 1
        if num < INT_MIN:
            return INT_MIN
        if num > INT_MAX:
            return INT_MAX

        return num
