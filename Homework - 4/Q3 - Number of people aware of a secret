class Solution:
    def peopleAwareOfSecret(self, n: int, delay: int, forget: int) -> int:
        MOD = 10**9 + 7
        dp = [0] * (n + 1)
        dp[1] = 1

        share = 0  # number of people who can share on the current day

        for day in range(2, n + 1):
            start = day - delay
            stop = day - forget

            if start >= 1:
                share = (share + dp[start]) % MOD
            if stop >= 1:
                share = (share - dp[stop]) % MOD

            dp[day] = share % MOD

        # Count people who still remember by end of day n
        start_alive = max(1, n - forget + 1)
        return sum(dp[start_alive:n + 1]) % MOD
