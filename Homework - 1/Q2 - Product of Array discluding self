from typing import List

class Solution:
    def productExceptSelf(self, nums: List[int]) -> List[int]:
        n = len(nums)
        ans = [1] * n

        # prefix pass: ans[i] = product of nums[0..i-1]
        prefix = 1
        for i in range(n):
            ans[i] = prefix
            prefix *= nums[i]

        # suffix pass: multiply ans[i] by product of nums[i+1..n-1]
        suffix = 1
        for i in range(n - 1, -1, -1):
            ans[i] *= suffix
            suffix *= nums[i]

        return ans
