class Solution:
    def rightSideView(self, root: Optional[TreeNode]) -> List[int]:
        if not root:
            return []

        queue = deque([root])
        res = []

        while queue:
            size = len(queue)
            for i in range(size):
                node = queue.popleft()
                if node.left:
                    queue.append(node.left)
                if node.right:
                    queue.append(node.right)

                # Last element in this level = rightmost
                if i == size - 1:
                    res.append(node.val)

        return res


        def dfs(node, level):
            if not node:
                return

            # If we visit this level for the first time, record the node
            if level == len(res):
                res.append(node.val)

            # Right first (important!)
            dfs(node.right, level + 1)
            dfs(node.left, level + 1)

        dfs(root, 0)
        return res
